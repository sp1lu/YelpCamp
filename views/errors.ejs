<% layout('layouts/boilerplate') %>
    <div class="row">
        <div class="col-8 offset-2">
            <div class="alert alert-danger" role="alert">
                <h5><%= err.statusCode %></h5>
                <p><%= err.message %></p>
                <% if (process.env.NODE_ENV !== 'production') { %>
                    <p class="m-0"><%= err.stack %></p>
                <% } %>
            </div>
        </div>
    </div>